---
---
<section id="download-hub" class="min-h-screen flex flex-col justify-center items-center bg-[var(--color-primary)] px-6 py-24">
    <div class="max-w-4xl w-full text-center space-y-12">
        <div class="space-y-4">
            <h1 class="font-heading text-5xl md:text-7xl text-[var(--color-secondary)] leading-tight">
                Get SoulSight
            </h1>
            <p class="font-body text-xl text-gray-600 max-w-2xl mx-auto">
                Take your sanctuary everywhere. Download the app for your preferred platform.
            </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 pt-8">
            <!-- Uptodown -->
            <a href="https://soulsight.en.uptodown.com/android" target="_blank" class="flex flex-col items-center p-8 bg-white rounded-3xl border border-gray-100 shadow-sm hover:shadow-xl hover:scale-105 transition-all duration-300 group">
                <div class="w-16 h-16 bg-gray-50 rounded-2xl flex items-center justify-center mb-6 group-hover:bg-[var(--color-accent)] transition-colors">
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8 text-[var(--color-secondary)] group-hover:text-white transition-colors" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
                        <polyline points="7 10 12 15 17 10"></polyline>
                        <line x1="12" y1="15" x2="12" y2="3"></line>
                    </svg>
                </div>
                <h3 class="font-heading text-2xl text-[var(--color-secondary)] mb-2">Android</h3>
                <p class="text-sm text-gray-500 mb-6">via Uptodown</p>
                <span class="px-6 py-2 bg-[var(--color-secondary)] text-white text-xs font-bold rounded-full uppercase tracking-widest group-hover:bg-[var(--color-accent)] transition-colors">
                    Download APK
                </span>
            </a>

            <!-- GitHub -->
            <a href="https://github.com/soulmatelabs/soulsight/releases" target="_blank" class="flex flex-col items-center p-8 bg-white rounded-3xl border border-gray-100 shadow-sm hover:shadow-xl hover:scale-105 transition-all duration-300 group">
                <div class="w-16 h-16 bg-gray-50 rounded-2xl flex items-center justify-center mb-6 group-hover:bg-[#24292F] transition-colors">
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8 text-[var(--color-secondary)] group-hover:text-white transition-colors" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"></path>
                    </svg>
                </div>
                <h3 class="font-heading text-2xl text-[var(--color-secondary)] mb-2">GitHub</h3>
                <p class="text-sm text-gray-500 mb-6">Source Code & APK</p>
                <span class="px-6 py-2 bg-[#24292F] text-white text-xs font-bold rounded-full uppercase tracking-widest hover:bg-black transition-colors">
                    Get Releases
                </span>
            </a>

            <!-- Google Play Store -->
            <div class="flex flex-col items-center p-8 bg-gray-50/50 rounded-3xl border border-dashed border-gray-200 opacity-70 grayscale transition-all duration-300">
                <div class="w-16 h-16 bg-white rounded-2xl flex items-center justify-center mb-6">
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8 text-gray-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M5 12h14"></path>
                        <path d="m12 5 7 7-7 7"></path>
                    </svg>
                </div>
                <h3 class="font-heading text-2xl text-gray-400 mb-2">Google Play</h3>
                <p class="text-sm text-gray-400 mb-6">Coming Soon</p>
                <span class="px-6 py-2 border border-gray-200 text-gray-400 text-xs font-bold rounded-full uppercase tracking-widest cursor-not-allowed">
                    Unavailable
                </span>
            </div>

            <!-- App Store -->
            <div class="flex flex-col items-center p-8 bg-gray-50/50 rounded-3xl border border-dashed border-gray-200 opacity-70 grayscale transition-all duration-300">
                <div class="w-16 h-16 bg-white rounded-2xl flex items-center justify-center mb-6">
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8 text-gray-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M12 19V5"></path>
                        <path d="m5 12 7-7 7 7"></path>
                    </svg>
                </div>
                <h3 class="font-heading text-2xl text-gray-400 mb-2">App Store</h3>
                <p class="text-sm text-gray-400 mb-6">Coming Soon</p>
                <span class="px-6 py-2 border border-gray-200 text-gray-400 text-xs font-bold rounded-full uppercase tracking-widest cursor-not-allowed">
                    Unavailable
                </span>
            </div>
        </div>

        <div class="pt-12">
            <a href="/" class="text-sm font-body font-medium text-gray-500 hover:text-[var(--color-accent)] transition-colors flex items-center justify-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="19" y1="12" x2="5" y2="12"></line><polyline points="12 19 5 12 12 5"></polyline></svg>
                Back to Home
            </a>
        </div>
    </div>
</section>
