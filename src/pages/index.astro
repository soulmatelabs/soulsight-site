---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navbar from '../components/Navbar.astro';
import Hero from '../components/Hero.astro';
import LogTrap from '../components/LogTrap.astro';
import DemoSection from '../components/DemoSection.astro';
import ProjectStack from '../components/ProjectStack.astro';
import Conversion from '../components/Conversion.astro';
import Footer from '../components/Footer.astro';
---

<BaseLayout 
  title="SoulSight | Private AI-enhanced Journaling"
  description="SoulSight is free app that uses AI to aid self-reflection and personal-growth. Make your journaling more effective. Get early access here."
  image="/favicon.svg"
>
  <Navbar />
  <main class="w-full overflow-hidden">
    <Hero />
    <LogTrap />
    <DemoSection />
    <ProjectStack />
    <Conversion />
  </main>
  <Footer />
</BaseLayout>
